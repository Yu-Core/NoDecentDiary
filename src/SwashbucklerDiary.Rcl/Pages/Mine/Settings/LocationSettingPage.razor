@page "/pppp"
@namespace SwashbucklerDiary.Rcl.Pages
@inherits ImportantComponentBase

<MyAppBar>
    <MButton Icon="true"
             OnClick="NavigateToBack">
        <MIcon>
            mdi-arrow-left
        </MIcon>
    </MButton>

    <MToolbarTitle Class="font-weight-bold">
        @(I18n.T("Setting.Display.Diary.Location.Name"))
    </MToolbarTitle>

    <MSpacer></MSpacer>

    <MButton Icon="true"
             OnClick="()=>showSort=true">
        <MIcon>
            mdi-sort-variant
        </MIcon>
    </MButton>
</MyAppBar>

<ScrollContainer>
    <LocationCardList @bind-ShowSort="showSort"
                      Value="locations">
    </LocationCardList>
</ScrollContainer>

<RightBottomFloatButton Icon="mdi-plus" OnClick="()=>showAdd=true">
</RightBottomFloatButton>

<InputDialog @bind-Visible="showAdd"
             Title="@(I18n.T("Location.Add"))"
             Placeholder="@(I18n.T("Location.Placeholder"))"
             OnOK="SaveAdd">
</InputDialog>

@page "/searchAppFunction"
@inherits ImportantComponentBase

<MyAppBar>
    <MButton Icon
             OnClick="NavigateToBack">
        <MIcon>mdi-arrow-left</MIcon>
    </MButton>

    <SearchTextField @bind-Value="search"
                     Visible="true"
                     Placeholder="@(I18n.T("SearchAppFunction.Placeholder"))"
                     OnInput="UpdateAppFunctions">
    </SearchTextField>
</MyAppBar>

<ScrollContainer>
    @if (ShowPrivacyModeItem)
    {
        <MCard Class="mb-5 list-item-card"
               Elevation="0"
               Rounded="@("lg")"
               OnClick="ToPrivacyMode">
            <MList>
                <MListItem>
                    <MListItemIcon>
                        <MIcon Class="list-item-icon">
                            mdi-hexagon-slice-3
                        </MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle>
                            @(I18n.T("PrivacyMode.Name"))
                        </MListItemTitle>
                    </MListItemContent>
                </MListItem>
            </MList>
        </MCard>
    }

    <Virtualize Items="_appFunctions"
                ItemSize="@ItemHeight"
                Context="item">
        <MCard @key="item"
               Class="mb-5 list-item-card"
               Elevation="0"
               Rounded="@("lg")"
               OnClick="()=>To(item.Href!)">
            <MList>
                <MListItem>
                    <MListItemIcon>
                        <MIcon Class="list-item-icon">
                            @item.Icon
                        </MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle Class="mb-2">
                            @(I18n.T(item.Name))
                        </MListItemTitle>
                        <MListItemSubtitle>
                            @(I18n.T(item.Path))
                        </MListItemSubtitle>
                    </MListItemContent>
                </MListItem>
            </MList>
        </MCard>
    </Virtualize>

    <EmptyResult Show="_appFunctions.Count == 0 && !ShowPrivacyModeItem"></EmptyResult>

</ScrollContainer>

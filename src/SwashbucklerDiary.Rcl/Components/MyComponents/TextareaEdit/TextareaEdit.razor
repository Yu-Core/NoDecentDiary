@namespace SwashbucklerDiary.Rcl.Components

<MTextareaExtension @ref="mTextarea"
                    Value="@Value"
                    ValueChanged="ValueChanged"
                    Class="@($"{Class} user-select flex-grow-1 flex-column")"
                    Solo="true"
                    Flat="true"
                    BackgroundColor="transparent"
                    HideDetails="@("auto")"
                    NoResize="true"
                    Autofocus="Autofocus"
                    OnAfter="OnAfter"
                    spellcheck="false"
                    Placeholder="@(I18n.T("Write.ContentPlace"))">
</MTextareaExtension>

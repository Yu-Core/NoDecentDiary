@namespace SwashbucklerDiary.Rcl.Layout

<div class="@(ShowClass)" style="width:100%;max-width:480px;">
    <div class="text-h5 text-center mb-5" style="font-weight:700;">
        @(I18n.T("AgreementAndPolicy.Title"))
    </div>

    <MContainer Class="d-flex justify-center mb-5">
        <MMarkdownIt Class="text-subtitle-2 text--secondary"
                     Source="@(I18n.T("AgreementAndPolicy.Content"))">
        </MMarkdownIt>
    </MContainer>

    <div class="d-flex flex-column flex-sm-row-reverse">
        <MButton Class="black-white-btn mb-5 flex-grow-1 ml-sm-2"
                 Rounded="true"
                 Large="true"
                 OnClick="OnOK">
            @(I18n.T("AgreementAndPolicy.Agree"))
        </MButton>
        <MButton Class="mb-5 flex-grow-1 mr-sm-2"
                 Rounded="true"
                 Outlined="true"
                 Large="true"
                 OnClick="OnCancel">
            @(I18n.T("AgreementAndPolicy.Disagree"))
        </MButton>
    </div>

</div>
